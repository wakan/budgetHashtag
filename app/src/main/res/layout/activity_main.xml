<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>

        <variable
            name="viewModel"
            type="fr.budgethashtag.viewmodel.MainActivityViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:title="@string/portefeuille_default_lib"
                app:popupTheme="@style/AppTheme.PopupOverlay"/>
            <!--app:title="@={viewModel.toolBarTitle}"-->

        </android.support.design.widget.AppBarLayout>

        <ViewFlipper
            android:id="@+id/view_flipper_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <fragment
                android:id="@+id/frg_budget"
                android:name="fr.budgethashtag.view.fragment.BudgetFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/fragment_budget"/>

            <fragment
                android:id="@+id/frg_transaction"
                android:name="fr.budgethashtag.view.fragment.TransactionFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/fragment_transaction"/>

        </ViewFlipper>

    </LinearLayout>

</layout>