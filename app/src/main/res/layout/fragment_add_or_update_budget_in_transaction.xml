<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View"/>

        <variable
                name="viewModel"
                type="fr.budgethashtag.viewmodel.AddOrUpdateBudgetInTransactionViewModel"/>
    </data>


    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                    android:orientation="vertical"
    >
        <android.support.v7.widget.RecyclerView
                android:id="@+id/exist_in_trans_budget_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
        <AutoCompleteTextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:id="@+id/autocomplete_budget"
            android:labelFor="@+id/autocomplete_budget"
             android:inputType="textAutoCorrect"
            >

        </AutoCompleteTextView>

    </LinearLayout>

</layout>